@model IEnumerable<HospitalRiwi.Models.Patient>//Le dice a la vista que va a recibir una lista(IEnumerable) de objetos Patient desde el controlador

@{
    ViewData["Title"] = "Lista de Pacientes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Paciente</a>@*boton para registrar*@
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Documento
            </th>
            <th>
                Edad
            </th>
            <th>
                Teléfono
            </th>
            <th></th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) @*Recorre cada paciente que llega en la lista model*@
        {
            <tr>
                <td>@*Muestra el valor de la propiedad para ese paciente*@
                    @Html.DisplayFor(Modelitem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.Document)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    @*asp-action redirige a otra accion del controlador y añade el id a la url, para poder modificar un paciente en especifico*@
                </td>
            </tr>
        }
    </tbody>
</table>
