@model HospitalRiwi.Models.Doctor

@{
    ViewData["Title"] = "Eliminar Médico";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que quieres eliminar a este médico?</h3>
<div>
    <h4>Médico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Especialidad</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Speciality)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>